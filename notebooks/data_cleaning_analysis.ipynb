# Ячейка 1: Импорты и подключение
import pandas as pd
import numpy as np
from sqlalchemy import create_engine
import os
from dotenv import load_dotenv

load_dotenv()

host = os.environ.get("DB_DESTINATION_HOST")
port = os.environ.get("DB_DESTINATION_PORT")
db = os.environ.get("DB_DESTINATION_NAME")
username = os.environ.get("DB_DESTINATION_USER")
password = os.environ.get("DB_DESTINATION_PASSWORD")

conn = create_engine(
    f"postgresql://{username}:{password}@{host}:{port}/{db}",
    connect_args={"sslmode": "require"},
)

# Ячейка 2: Загрузка данных
df = pd.read_sql("SELECT * FROM raw_real_estate", conn)
print(f"Загружено {len(df)} строк")
df.head()

# Ячейка 3: Анализ дубликатов
duplicates = df.duplicated().sum()
print(f"Дубликатов: {duplicates}")

# Ячейка 4: Анализ пропусков
print("Пропуски по колонкам:")
print(df.isnull().sum())
print(f"\nПроцент пропусков:")
print((df.isnull().sum() / len(df) * 100).round(2))

# Ячейка 5: Анализ выбросов
numeric_cols = df.select_dtypes(include=[np.number]).columns

for col in numeric_cols:
    Q1 = df[col].quantile(0.25)
    Q3 = df[col].quantile(0.75)
    IQR = Q3 - Q1
    lower = Q1 - 1.5 * IQR
    upper = Q3 + 1.5 * IQR
    outliers = ((df[col] < lower) | (df[col] > upper)).sum()
    print(f"{col}: {outliers} выбросов ({outliers/len(df)*100:.1f}%)")

# Ячейка 6: Функция удаления дубликатов
def remove_duplicates(df):
    """Удаляет дубликаты"""
    initial_len = len(df)
    df = df.drop_duplicates()
    removed = initial_len - len(df)
    print(f"Удалено дубликатов: {removed}")
    return df


# Ячейка 7: Функция обработки пропусков
def handle_missing_values(df):
    """Обрабатывает пропущенные значения"""
    initial_len = len(df)

    # Удаляем строки с пропусками в критичных колонках
    critical_cols = ["price", "total_area", "rooms"]
    df = df.dropna(subset=critical_cols)

    # Заполняем пропуски в остальных колонках медианой
    numeric_cols = df.select_dtypes(include=[np.number]).columns
    for col in numeric_cols:
        if df[col].isnull().sum() > 0:
            df[col].fillna(df[col].median(), inplace=True)

    removed = initial_len - len(df)
    print(f"Удалено строк с пропусками: {removed}")
    return df


# Ячейка 8: Функция удаления выбросов
def remove_outliers(df):
    """Удаляет выбросы методом IQR"""
    initial_len = len(df)

    # Применяем IQR только к price и total_area
    for col in ["price", "total_area"]:
        Q1 = df[col].quantile(0.25)
        Q3 = df[col].quantile(0.75)
        IQR = Q3 - Q1
        lower = Q1 - 1.5 * IQR
        upper = Q3 + 1.5 * IQR
        df = df[(df[col] >= lower) & (df[col] <= upper)]

    removed = initial_len - len(df)
    print(f"Удалено выбросов: {removed}")
    return df


# Ячейка 9: Тестирование очистки
df_clean = remove_duplicates(df.copy())
df_clean = handle_missing_values(df_clean)
df_clean = remove_outliers(df_clean)

print(f"\nИтого:")
print(f"Было строк: {len(df)}")
print(f"Осталось строк: {len(df_clean)}")
print(
    f"Удалено: {len(df) - len(df_clean)} ({(len(df) - len(df_clean))/len(df)*100:.1f}%)"
)
